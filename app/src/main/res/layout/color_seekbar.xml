<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:padding="30dp"
    >


    <TableRow
        android:layout_marginBottom = "15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Red"
            android:fontFamily="@font/playfairdisplaybold"
            android:textSize="20sp"
            android:layout_weight = "1"/>

        <SeekBar
            android:id="@+id/redSB"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:max="255"
            android:min="0"
            android:progress="100"
            android:layout_weight="4"
            android:theme="@style/MySeekBarRed"/>

        <TextView
            android:id="@+id/redTV"
            android:text="100"
            android:textSize="20sp"
            android:layout_width="0dp"
            android:fontFamily="@font/playfairdisplaybold"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_weight = "1"/>

    </TableRow>

    <TableRow
        android:layout_marginBottom = "15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="20dp"
            android:fontFamily="@font/playfairdisplaybold"
            android:text="Green"
            android:layout_marginEnd="5dp"
            />

        <SeekBar

            android:id="@+id/greenSB"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:max="255"
            android:min="0"
            android:progress="100"
            android:theme="@style/MySeekBarGreen"

            />

        <TextView
            android:layout_margin="0dp"
            android:id="@+id/greenTV"
            android:layout_width="0dp"
            android:fontFamily="@font/playfairdisplaybold"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20dp"
            android:text="100"
            />


    </TableRow>

    <TableRow
        android:layout_marginBottom = "15dp"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="20sp"
            android:fontFamily="@font/playfairdisplaybold"
            android:text="Blue"
            android:layout_weight="1"
            />

        <SeekBar
            android:id="@+id/blueSB"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:max="255"
            android:min="0"
            android:progress="100"
            android:layout_weight="4"
            android:theme="@style/MySeekBarBlue"
            />

        <TextView
            android:id="@+id/blueTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:fontFamily="@font/playfairdisplaybold"
            android:text="100"
            android:layout_marginStart="5dp"
            android:layout_weight="1"/>


    </TableRow>

</TableLayout>