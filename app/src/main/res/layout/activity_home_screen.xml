<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeScreen">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Paper Trail "
        android:textStyle="bold"
        android:fontFamily="@font/playfairdisplaybold"
        android:textColor="#5d1c34"
        android:textSize="50sp"
        android:elevation="10dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="70dp"/>


    <GridView
        android:id="@+id/gridView"
        android:layout_width="match_parent"
        android:layout_height="530dp"
        android:columnWidth="130dp"
        android:padding="7dp"
        android:numColumns="2"
        android:gravity="center"
        android:layout_below="@id/titleText"
        android:stretchMode="columnWidth"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        android:background="@drawable/border" />

    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/gridView" >

        <ImageButton
            android:id="@+id/addJournalButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/add" />

        <ImageButton
            android:id="@+id/viewJournalButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/view" />

        <ImageButton
            android:id="@+id/deleteJournalButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/bin"
            android:layout_marginStart="10dp" />
    </LinearLayout>



</RelativeLayout>